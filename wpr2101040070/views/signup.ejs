<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>

</head>

<body>
    <style>
        body {
            font-family: "Poppins", sans-serif;
            font-weight: 700;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f4f4f4;
        }

        .container {
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
            padding: 40px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h2 {
            font-size: 28px;
            color: #333;
            margin-bottom: 20px;
        }

        .inputForm2 {
            margin-bottom: 25px;
            text-align: left;
        }

        .label-input2 {
            font-size: 14px;
            color: #333;
            margin-bottom: 5px;
            display: block;
        }

        .input2 {
            width: 100%;
            height: 40px;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            outline: none;
        }

        .input2:focus {
            border-color: #46a49b;
        }

        button {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            color: white;
            background-color: rgb(72, 72, 220);
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-top: 20px;
        }

        button:hover {
            background-color: rgb(138, 138, 213);
        }

        .signin {
            margin-top: 20px;
            font-size: 14px;
        }

        .signin a {
            color: #46a49b;
            font-weight: bold;
            text-decoration: none;
        }

        .signin a:hover {
            text-decoration: underline;
        }

        .signin h3 {
            margin-bottom: 5px;
        }
    </style>


    <div class="limiter">
        <div class="container">
            <div class="box">
                <div class="signin">
                    <h3>WELCOME</h3>
                    <a href="http://localhost:8000/">
                        Sign In
                    </a>
                </div>
                <div class="titleForm">
                    <h2>Sign Up</h2>
                </div>

                <form id="signupForm" action="/signup" method="post" onsubmit="validateForm(event)">
                    <div class="inputForm2">
                        <span class="label-input2">Full Name</span>
                        <input class="input2" type="text" id="fullName" name="fullname"
                            placeholder="Enter your full name" required>
                    </div>

                    <div class="inputForm2">
                        <span class="label-input2">Email Address</span>
                        <input class="input2" type="email" id="email" name="email" placeholder="Enter your email"
                            required>
                    </div>

                    <div class="inputForm2">
                        <span class="label-input2">Password</span>
                        <input class="input2" type="password" id="password" name="password" minlength="6"
                            placeholder="Enter your password" required>
                    </div>

                    <div class="inputForm2">
                        <span class="label-input2">Re-enter Password</span>
                        <input class="input2" type="password" id="confirmPassword" name="confirmPassword"
                            placeholder="Re-enter your password" required>
                    </div>


                    <button type="submit">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</body>
<script>
    fetch('/signup', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            fullname,
            email,
            password,
            confirmPassword,
        }),
    })
        .then(response => response.json())
        .then(data => {
            if (data.error)
                alert(data.error);
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred. Please try again.');
        });

</script>

</html>